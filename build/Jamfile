project boost/uri
    : requirements
      <link>shared:<define>BOOST_URI_DYN_LINK=1
      <link>static:<define>BOOST_URI_STATIC_LINK=1
      <define>BOOST_JSON_SOURCE
    : usage-requirements
      <link>shared:<define>BOOST_URI_DYN_LINK=1
      <link>static:<define>BOOST_URI_STATIC_LINK=1
    : source-location ../src
    ;

alias uri_sources
   : src.cpp
   ;

explicit uri_sources ;

lib boost_uri
   : uri_sources
   ;

boost-install boost_uri ;
